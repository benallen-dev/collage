package views

import (
	"github.com/benallen-dev/collage/pkg/data"
)

templ Images(users []data.User) {
	for _, user := range users {
		<div class="bg-stone-700 rounded-lg overflow-hidden w-full relative flex flex-col justify-between items-center">
			<a href={ templ.SafeURL(user.ImageUrl) } target="_blank"><img class="object-contain w-full transition-all" src={ user.ImageUrl }></img></a>
			<div class="flex flex-row text-neutral-50 p-2 pb-3 opacity-100 w-full h-full gap-4">
				<div class="pl-1 grow-0 cursor-pointer opacity-40 hover:opacity-100" hx-trigger="click" hx-post={ "api/delete/" + user.SessionId } hx-target="#image-container">
					âŒ
				</div>
				<div>
					{ user.Name }
				</div>
			</div>
		</div>
	}
}
